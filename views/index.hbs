<main id="wrap">
    {{#*inline "checkbox"}}
        <input type=checkbox name={{name}} value={{value}} id={{name}}-{{value}}>
        <label for={{name}}-{{value}}>{{label}}</label>
    {{/inline}}

    <div id="tables">
        <table class=elements>
            <tr>
                <th><button id="reset-position-filters" title="Reset group, period and block filters">×</button></th>
                {{#range 1 19}}
                    <th>{{> checkbox name="group" value=index label=index }}</th>
                {{/range}}
            </tr>
            {{#range 1 8}}
                <tr>
                    <th>{{> checkbox name="period" value=index label=index}}</th>
                    {{#range 1 19}}
                        {{#with (getElementAtPosition ../index index)}}
                            <td s={{symbol}} c={{toInitialism groupBlock}} t={{meltingPoint}},{{boilingPoint}}
                                y={{yearDiscovered}}>
                                {{> element element=this zoom=../../../zoom}}
                            </td>
                        {{else}}
                            {{#if (isLanthanidesGroup ../index index)}}
                                <td c=l class=lanthinedes>
                                    <div>
                                        <p class=an>57-71</p>
                                        <p class=s>*</p>
                                        <p class=n>Lanthanides</p>
                                    </div>
                                </td>
                            {{else if (isActinidesGroup ../index index)}}
                                <td c=a class=actinides>
                                    <div>
                                        <p class=an>89-103</p>
                                        <p class=s>**</p>
                                        <p class=n>Actinides</p>
                                    </div>
                                </td>
                            {{else}}
                                <td></td>
                            {{/if}}
                        {{/with}}
                    {{/range}}
                </tr>
            {{/range}}
            <tr>
                <th></th>
                <th colspan=2>
                    {{> checkbox name="block" value="s" label="s"}}
                </th>
                <th colspan=10>
                    {{> checkbox name="block" value="d" label="d"}}
                </th>
                <th b=p tabindex=0 colspan=6>
                    {{> checkbox name="block" value="p"  label="p"}}
                </th>
            </tr>
        </table>

        <table class="elements block-f">
            <tr>
                <th rowspan=2>
                    {{> checkbox name="block" value="f" label="f"}}
                </th>
                <th colspan=2>
                    {{> checkbox name="group" value="l" label="* Lanthanides"}}
                </th>
                {{#each (lanthanides)}}
                    <td s={{symbol}} c={{toInitialism groupBlock}} t="{{meltingPoint}},{{boilingPoint}}"
                        y={{yearDiscovered}}>
                        {{> element element=this zoom=../zoom}}
                    </td>
                {{/each}}
                <th></th>
            </tr>
            <tr>
                <th colspan=2>
                    {{> checkbox name="group" value="a" label="** Actinides"}}
                </th>
                {{#each (actinides)}}
                    <td s={{symbol}} c={{toInitialism groupBlock}} t="{{meltingPoint}},{{boilingPoint}}"
                        y={{yearDiscovered}}>
                        {{> element element=this zoom=../zoom}}
                    </td>
                {{/each}}
                <th></th>
            </tr>
        </table>
    </div>
</main>
