        </label>
        <div class=ctrl-content>
            <div>
                <button type=button class=close-content title="Close Filters" value="#toggle-filters">×</button>
                <h2>Filters</h2>
                <h3>Find elements</h3>
                <div id="filter-find">
                    <label for="find">Name or symbol</label>
                    <input id=find placeholder="Antimony">
                    <button type=button id=find-reset>Clear</button>
                </div>
                <h3>Year discovered</h3>
                <div id="filter-year">
                    <label for="year">Show before</label>
                    <input type=number min=1669 max={{year}} id=year>
                    <button type=button id=year-reset>Reset</button>
                </div>
                <h3>State at temperature</h3>
                <div id=filter-temp>
                    <label for="temp">Temperature </label>
                    <input type=number value=298 min=-460 max=10340 id=temp>
                    <select>
                        <option value=k selected>K</option>
                        <option value=c>°C</option>
                        <option value=f>°F</option>
                    </select>
                </div>
                <fieldset id=filter-state class=radios>
                    <label><input type=checkbox name=state value=gas> Gas</label>

                    <label><input type=checkbox name=state value=liquid> Liquid</label>

                    <label><input type=checkbox name=state value=solid> Solid</label>
                </fieldset>
                <h3>Categories:</h3>
                <h4>Non-Metals</h4>
                <fieldset class="radios filter-category">
                    <label c=m><input type=checkbox name=category value=m> Metalloids</label>
                    <label c=n><input type=checkbox name=category value=n> Other non-metals</label>
                    <label c=h><input type=checkbox name=category value=h> Halogens</label>
                    <label c=ng><input type=checkbox name=category value=ng> Noble gases</label>
                </fieldset>
                <h4>Metals</h4>
                <fieldset class="radios filter-category">
                    <label c=am><input type=checkbox name=category value=am> Alkali metals</label>
                    <label c=aem><input type=checkbox name=category value=aem> Alkaline earth metals</label>
                    <label c=l><input type=checkbox name=category value=l> Lanthanides</label>
                    <label c=a><input type=checkbox name=category value=a> Actinides</label>
                    <label c=tm><input type=checkbox name=category value=tm> Transition metals</label>
                    <label c=ptm><input type=checkbox name=category value=ptm> Post-transition metals</label>
                </fieldset>
            </div>
        </div>
    </div>
