    <!-- Center and zoom -->
    <button id="center" title="Re-center (r)" type="button">Re-center</button>

    <div id=zoom>
        <a href="?z={{incrementZoom zoom}}" value=1 title="Zoom in" (+) id=zoom-in>+<i> Zoom in</i></a>
        <a href="?z={{decrementZoom zoom}}" value=-1 title="Zoom out (-)" id=zoom-out>−<i> Zoom out</i></a>
    </div>

    <!-- Filters -->
    <div id=filters>
        <input type=checkbox id=toggle-filters class=ctrl-toggle tabindex=0>
        <label class=ctrl-label for=toggle-filters title="Filters (f)">
